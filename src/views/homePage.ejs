<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    .title {
        padding: 15px 20px;
        font-size: 20px;
        font-weight: 700;
    }

    th,
    td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    tr:hover {
        background-color: #ccc;
    }
</style>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">News</a>
    </div>
    <div class="table-container">
            <div class="title">List Users</div>
            <table>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>Actions</th>
                </tr>
                <% listUsers.forEach(user=> { %>
                    <tr>
                        <td>
                            <%= user.id %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.city %>
                        </td>
                        <td>
                            <a href="/update/<%= user.id %>">Edit</a>
                            <form action="/delete-user/<%= user.id %>" method="POST">
                                <button>Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </table>
    </div>
</body>

</html>